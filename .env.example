# KraftdIntel Environment Variables

## Application Settings
ENVIRONMENT=development
DEBUG=False
LOG_LEVEL=INFO

## Database Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-db-primary-key
COSMOS_DB_DATABASE=kraftdintel
COSMOS_DB_CONTAINER=documents

## Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

## Azure Key Vault (for production)
AZURE_KEYVAULT_ENABLED=False
AZURE_KEYVAULT_NAME=your-keyvault-name
AZURE_KEYVAULT_ENDPOINT=https://your-keyvault-name.vault.azure.net/

## Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

## Azure Application Insights
APPINSIGHTS_INSTRUMENTATION_KEY=your-app-insights-key
APPLICATIONINSIGHTS_ENABLED=False

## Azure Container Registry (for Docker)
REGISTRY_LOGIN_SERVER=your-registry.azurecr.io
REGISTRY_USERNAME=your-registry-username
REGISTRY_PASSWORD=your-registry-password

## Deployment Configuration
DEPLOYMENT_SLOTS=staging,production
DEPLOYMENT_SLOT=production

## Email/Notifications (future use)
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=noreply@kraftdintel.com
SMTP_PASSWORD=your-smtp-password

## API Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=5000

## Feature Flags
FEATURE_AUDIT_LOGGING=True
FEATURE_ADVANCED_SEARCH=False
FEATURE_BULK_OPERATIONS=False
