# KRAFTD Backend Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to Git - it contains secrets

# ===== COSMOS DB =====
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-primary-key-here
COSMOS_DATABASE=KraftdDB

# ===== AUTHENTICATION =====
JWT_SECRET=your-secret-signing-key-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===== SERVER CONFIGURATION =====
ENVIRONMENT=development
# Options: development, staging, production
# In production, set to 'production' for stricter error handling

LOG_LEVEL=info
# Options: debug, info, warning, error, critical

HOST=127.0.0.1
PORT=8000

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
# In production, set to your frontend domain:
# CORS_ORIGINS=https://kraftd.example.com,https://www.kraftd.example.com

# ===== LOGGING =====
ENABLE_REQUEST_LOGGING=true
LOG_FILE_PATH=./logs/backend.log

# ===== FEATURES =====
ENABLE_QUOTA_ENFORCEMENT=true
ENABLE_FEEDBACK_SYSTEM=true
ENABLE_SCHEMA_AI=true

# ===== AZURE SPECIFIC =====
AZURE_ENVIRONMENT=cloud
# Options: cloud (Azure Public Cloud), china (Azure China), government (Azure Government)

# ===== MONITORING =====
ENABLE_APPLICATION_INSIGHTS=false
# Set to true in production with APPINSIGHTS_INSTRUMENTATION_KEY
APPINSIGHTS_INSTRUMENTATION_KEY=

# ===== SECURITY =====
ALLOWED_HOSTS=localhost,127.0.0.1
# In production: ALLOWED_HOSTS=api.kraftd.example.com
TRUSTED_HOSTS=localhost,127.0.0.1

# ===== RATE LIMITING =====
ENABLE_RATE_LIMITING=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60
